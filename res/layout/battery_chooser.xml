<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/scrollviewbattery" android:layout_width="match_parent" android:layout_height="match_parent" >
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/linearlayoutbattery" android:layout_width="match_parent" android:layout_height="wrap_content" >
	    <RadioGroup android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/radiogroup_battery">
	        <RadioButton android:layout_width="match_parent" android:layout_height="wrap_content" android:drawableLeft="@drawable/circle" android:text="@string/battery_circle" android:id="@+id/battery_circle" />
	        <RadioButton android:layout_width="match_parent" android:layout_height="wrap_content" android:drawableLeft="@drawable/hooolm" android:text="@string/battery_hooolm" android:id="@+id/battery_hooolm" />
	        <RadioButton android:layout_width="match_parent" android:layout_height="wrap_content" android:drawableLeft="@drawable/digital" android:text="@string/battery_digital" android:id="@+id/battery_digital" />
	        <RadioButton android:layout_width="match_parent" android:layout_height="wrap_content" android:drawableLeft="@drawable/gauge" android:text="@string/battery_gauge" android:id="@+id/battery_gauge" />
	        <RadioButton android:layout_width="match_parent" android:layout_height="wrap_content" android:drawableLeft="@drawable/original_battery" android:text="@string/battery_original" android:id="@+id/battery_original" />
	        <RadioButton android:layout_width="match_parent" android:layout_height="wrap_content" android:drawableLeft="@drawable/numbers" android:text="@string/battery_numbers" android:id="@+id/battery_numbers" />
	        <RadioButton android:layout_width="match_parent" android:layout_height="wrap_content" android:checked="true" android:drawableLeft="@drawable/xoom" android:text="@string/battery_xoom" android:id="@+id/battery_xoom" />
	    </RadioGroup>
	    <TextView android:gravity="center_horizontal" android:paddingTop="15dip" android:paddingBottom="5dip" android:layout_width="match_parent" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:textColor="#aa33b5e5" android:text="@string/ready" android:id="@+id/ready" />
	    <Button android:layout_width="200dip" android:layout_height="wrap_content" android:padding="10dip" android:background="@drawable/button" android:text="@string/choose" android:id="@id/battery_choose"/>
    </LinearLayout>
</ScrollView>